{
  "name": "emberx",
  "type": "module",
  "version": "1.0.2",
  "author": "Izel Nakri",
  "description": "",
  "license": "MIT",
  "engines": {
    "node": ">= 12.0"
  },
  "scripts": {
    "lint": "eslint . --ext=js,ts --cache",
    "dev": "parcel index.html tests/tests.html --no-cache",
    "test:node": "node_modules/.bin/ava --verbose",
    "test": "npm-run-all lint test:browsers test:ava",
    "test:browsers": "parcel tests/index.html",
    "typecheck": "tsc --project tsconfig.json --noEmit --skipLibCheck",
    "watch:node": "tsc --watch"
  },
  "dependencies": {
    "@glimmer/runtime": "^0.62.3",
    "@glimmerx/component": "^0.2.5",
    "@glimmerx/core": "^0.2.5",
    "@glimmerx/modifier": "^0.2.5",
    "@glimmerx/service": "^0.2.5",
    "location-bar": "^3.0.1",
    "router_js": "^7.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@glimmer/babel-plugin-glimmer-env": "~2.0.0-beta.7",
    "@glimmer/env": "^0.1.7",
    "@glimmerx/babel-plugin-component-templates": "^0.2.5",
    "@glimmerx/eslint-plugin": "^0.2.5",
    "@glimmerx/helper": "^0.2.5",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.14.0",
    "@types/qunit": "^2.9.1",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "ava": "^3.13.0",
    "babel-loader": "^8.1.0",
    "bootstrap": "5.0.0-alpha2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^5.0.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.2",
    "fs-extra": "^9.0.1",
    "glob": "7.1.6",
    "html-webpack-plugin": "^4.0.4",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-nightly.428",
    "prettier": "^2.0.2",
    "qunit": "^2.11.3",
    "qunit-dom": "^1.1.0",
    "sass": "^1.27.0",
    "style-loader": "^2.0.0",
    "testem": "^3.0.3",
    "typescript": "~4.0.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "browserslist": {
    "production": [
      "last 2 Edge versions",
      "last 2 Chrome versions",
      "last 2 Firefox versions",
      "last 2 Safari versions"
    ],
    "development": [
      "last 1 Chrome version",
      "last 1 Firefox version",
      "last 1 Safari version"
    ]
  },
  "babel": {
    "plugins": [
      [
        "@glimmer/babel-plugin-glimmer-env",
        {
          "DEBUG": true
        }
      ],
      "@glimmerx/babel-plugin-component-templates",
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    },
    "env": {
      "browser": true
    },
    "plugins": [
      "@glimmerx",
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/",
      "!.*"
    ],
    "rules": {
      "@glimmerx/template-vars": "error",
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts"
        ],
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier/@typescript-eslint"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off",
          "@typescript-eslint/ban-types": "off"
        }
      },
      {
        "files": [
          "testem.js"
        ],
        "env": {
          "node": true
        }
      }
    ]
  },
  "ava": {
    "files": [
      "src/test/**/*",
      "!src/test/test-helpers/**/*",
      "!src/test/target-outputs/**/*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "30000",
    "cache": false,
    "failFast": true
  }
}
