{
  "name": "emberx",
  "type": "module",
  "version": "1.0.4",
  "author": "Izel Nakri",
  "description": "",
  "license": "MIT",
  "engines": {
    "node": ">= 12.0"
  },
  "workspaces": [
    "packages/@emberx/*",
    "examples/*"
  ],
  "scripts": {
    "lint": "eslint . --ext=js,ts --cache",
    "build": "npm run build:glimmer && npm run build:libraries",
    "build:glimmer": "node_modules/.bin/webpack build --config-name='glimmer'",
    "build:libraries": "node_modules/.bin/webpack build --config-name='build'",
    "build:devserver": "node_modules/.bin/webpack build --config-name='devserver'",
    "build:all": "node_modules/.bin/webpack build",
    "dev": "node_modules/.bin/webpack-dev-server --config-name='devserver'",
    "dev:build": "node_modules/.bin/webpack-dev-server --config-name='build'",
    "dev:all": "node_modules/.bin/webpack-dev-server",
    "test": "npm run build && node_modules/.bin/qunitx packages/**/tests/**/*-test.ts tests/**/*-test.ts --browser --debug",
    "test:ci": "node_modules/.bin/qunitx packages/@emberx/string/tests/**/*-test.ts tests/**/*-test.ts --browser --debug --failFast",
    "typecheck": "tsc --project tsconfig.json --noEmit --skipLibCheck",
    "ts:watch": "tsc --watch"
  },
  "dependencies": {
    "@glimmer/component": "2.0.0-beta.16",
    "@glimmer/core": "2.0.0-beta.16",
    "@glimmer/interfaces": "^0.79.1",
    "@glimmer/modifier": "2.0.0-beta.16",
    "@glimmer/tracking": "2.0.0-beta.16",
    "route-recognizer": "^0.3.4",
    "router_js": "^7.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@glimmer/babel-preset": "2.0.0-beta.16",
    "babel-loader": "^8.2.2",
    "bootstrap": "^5.0.1",
    "qunitx": "^0.1.7",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^4.0.0-beta.3"
  },
  "babel": {
    "presets": [
      "@glimmer/babel-preset",
      "@babel/preset-typescript",
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "production": [
      "last 2 Edge versions",
      "last 2 Chrome versions",
      "last 2 Firefox versions",
      "last 2 Safari versions"
    ],
    "development": [
      "last 1 Chrome version",
      "last 1 Firefox version",
      "last 1 Safari version"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
