{
  "name": "emberx",
  "type": "module",
  "version": "1.0.4",
  "author": "Izel Nakri",
  "description": "",
  "license": "MIT",
  "engines": {
    "node": ">= 12.0"
  },
  "workspaces": [
    "packages/@emberx/*",
    "examples/*"
  ],
  "scripts": {
    "lint": "eslint . --ext=js,ts --cache",
    "build": "npm run libs:build",
    "libs:build": "npm run libs:clean && node scripts/build-libraries.js",
    "libs:clean": "node scripts/clean-libraries.js",
    "dev": "webpack-dev-server",
    "test": "npm run build && node_modules/.bin/qunitx packages --browser --debug",
    "test:ci": "node_modules/.bin/qunitx test/index.ts --browser --debug --failFast",
    "typecheck": "tsc --project tsconfig.json --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@glimmer/compiler": "^0.79.2",
    "@glimmer/component": "2.0.0-beta.16",
    "@glimmer/core": "2.0.0-beta.16",
    "@glimmer/interfaces": "^0.79.2",
    "@glimmer/modifier": "2.0.0-beta.16",
    "@glimmer/opcode-compiler": "^0.79.2",
    "@glimmer/tracking": "2.0.0-beta.16",
    "@glimmer/ssr": "^2.0.0-beta.16",
    "route-recognizer": "^0.3.4",
    "router_js": "^7.3.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "babel-loader": "^8.2.2",
    "bootstrap": "^5.0.1",
    "qunit-dom": "^1.6.0",
    "qunitx": "^0.1.10",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^4.0.0-beta.3"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "browserslist": {
    "production": [
      "last 2 Edge versions",
      "last 2 Chrome versions",
      "last 2 Firefox versions",
      "last 2 Safari versions"
    ],
    "development": [
      "last 1 Chrome version",
      "last 1 Firefox version",
      "last 1 Safari version"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "qunitx": {
    "output": "tmp",
    "timeout": 20000,
    "failFast": false,
    "port": 1234,
    "htmlPaths": [
      "test/index.html"
    ]
  }
}
